@model StudentViewTemplatesDemo.Models.Address

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetAddress</title>
    <style>
        body {
            font-family: 'Indie Flower', cursive;
            background-color: #F0ECE5;
            color: #31304D;
            margin: 0;
            padding: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .container {
            width: 100%;
            max-width: 600px;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 30px;
            box-sizing: border-box;
            margin: 40px auto;
        }

        h4 {
            text-align: center;
            color: #161A30;
            margin-top: 0;
            font-size: 24px;
            padding-bottom: 10px;
            border-bottom: 2px solid #161A30;
        }

        .dl-horizontal {
            margin: 20px 0;
        }

            .dl-horizontal dt {
                font-weight: bold;
                color: #31304D;
                margin-bottom: 5px;
            }

            .dl-horizontal dd {
                margin-bottom: 15px;
            }

        p {
            text-align: center;
            margin-top: 20px;
        }

        .action-links a {
            text-decoration: none;
            color: #161A30;
            padding: 0 10px;
        }

            .action-links a:hover {
                text-decoration: underline;
                color: #161A30;
            }
    </style>
</head>
<body>
    <div class="container">
        <h4>Address</h4>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Country)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Country)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.State)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.State)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.City)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.City)
            </dd>
        </dl>

        <p class="action-links">
            @Html.ActionLink("Edit", "EditAddress", new { id = Model.Id }) |
            @Html.ActionLink("Delete", "DeleteAddress", new { id = Model.Id }) |
            @Html.ActionLink("Back to List", "Index")
        </p>
    </div>
</body>
</html>
